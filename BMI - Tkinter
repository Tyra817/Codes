import tkinter as tk
from tkinter import messagebox

def calculate_bmi():
    try:
        weight = float(entry_weight.get())
        height = float(entry_height.get())
        bmi = weight / (height ** 2)
        label_result['text'] = f"BMI: {bmi:.2f}"
    except ValueError:
        messagebox.showwarning("Input Error", "Please enter valid numbers.")

root = tk.Tk()
root.title("BMI Calculator")

label_weight = tk.Label(root, text="Weight (kg):")
label_weight.pack()
entry_weight = tk.Entry(root)
entry_weight.pack()

label_height = tk.Label(root, text="Height (m):")
label_height.pack()
entry_height = tk.Entry(root)
entry_height.pack()

label_result = tk.Label(root, text="BMI:")
label_result.pack()

button_calculate = tk.Button(root, text="Calculate", command=calculate_bmi)
button_calculate.pack()

root.mainloop()
